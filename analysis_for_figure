# performance



plt.figure(figsize=(15,4))
plt.plot(seeded.estimates.YrA[3]+seeded.estimates.C[3])
plt.plot(seeded.estimates.C[3])

plt.figure(figsize=(15,4))
plt.plot(boxes_traces_active.mean(axis=0))
plt.plot(boxes_traces_active[3])

corr_boxes = np.corrcoef(boxes_traces_active)
plt.imshow(corr_boxes)
corr_denoised = np.corrcoef(seeded.estimates.C)
plt.imshow(corr_denoised)

corrs_comp = np.empty((boxes_traces_active.shape[0],boxes_traces_active.shape[0]))
for i,box in enumerate(boxes_traces_active):
    for j,c in enumerate(seeded.estimates.C):
        corrs_comp[i,j] = np.corrcoef([box,c])[1,0]
plt.imshow(corrs_comp)



